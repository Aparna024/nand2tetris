/** 
 * Multiplexor. If sel==1 then out=b else out=a.
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    // Put your code here:
    Or(a=sel, b=a, out=c0);
    And(a=sel, b=b, out=c1);
    Xor(a=c0, b=c1, out=c2);
    Xor(a=sel, b=c2, out=out);
}