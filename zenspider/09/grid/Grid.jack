// -*- c -*-

class Grid {
  static Ship ship;

  function void init() {
    return;
  }

  function void debugX(int l, String s, int i) {
    do Output.moveCursor(l, 0);
    do Output.printString(s);
    do Output.printInt(i);
    do Output.printChar(32);
    do Output.printChar(32);
    do Output.printChar(32);
    do s.dispose();
    return;
  }

  function void debug() {
    do ship.debug();
    return;
  }

  function void go() {
    var int a, au, x, y, dx, dy;

    let ship = Ship.new(110, 110);

    while (true) {
      do ship.update();
      do Grid.debug();
      do ship.draw();

      do Sys.wait(50);
    }

    return;
  }
}
